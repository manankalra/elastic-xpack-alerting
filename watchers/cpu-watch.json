{
  "input" : {
    "search" : {
      "request" : {
        "indices" : "metricbeat-*",
        "body" : {
          "size" : 1,
          "query" : {
            "bool" : {
	            "must" : {
                "term" : { "metricset.name" : "cpu" }
              },
              "filter" : {
                "range" : {
                  "@timestamp": {
                    "from" : "now-1m",
                    "to" : "now"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  
  "trigger" : {
    "schedule" : {
      "interval" : "10s"
    }
  }, 
  
  "condition" : {
    "compare" : {
      "ctx.payload.hits.hits.0._source.system.cpu.user.pct" : {
        "gte" : 0.10
      }
    }
  },

  "throttle_period" : "10s",
  
  "actions" : {
    "logging" : {
      "logging" : {
        "text" : "Caution! CPU usage is above 10%."
      }
    },
    "notify-slack" : {
      "slack" : {
        "message" : {
          "to" : [ "#cpu-alerts", "@manankalra" ], 
          "text" : "Caution! CPU usage is above 50%." 
        }
      }
    },
    "send_email" : { 
      "email" : { 
        "to" : "mananenroll29@gmail.com", 
        "subject" : "CPU -- Watcher Notification", 
        "body" : "Caution! Memory usage is above 10%." 
      }
    }
  }
}
